<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>net.maxgabut.pitest.sample</groupId>
    <artifactId>simple</artifactId>
    <packaging>jar</packaging>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>simplest</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.pitest</groupId>
                        <artifactId>pitest-maven</artifactId>
												<version>1.4.5</version>
												<!--
												<executions>
												    <execution>
                                <goals>
															      <goal>mutationCoverage</goal>
															  </goals>
														</execution>
												</executions>
                        -->
                    </plugin>
                </plugins>
            </build>
        </profile>
		
				<profile>
            <id>coverage</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.pitest</groupId>
                        <artifactId>pitest-maven</artifactId>
                        <version>1.4.4-SNAPSHOT</version>
                        <configuration>
                            <exportLineCoverage>true</exportLineCoverage>
                            <outputFormats>
                                <value>XML</value>
                                <value>HTML</value>
                            </outputFormats>
                            <timestampedReports>false</timestampedReports>
                        </configuration>
                        <executions>
                            <execution>
                                <id>run-mutation-tests</id>
                                <goals>
                                    <goal>mutationCoverage</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>null-targets</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.pitest</groupId>
                        <artifactId>pitest-maven</artifactId>
                        <version>1.4.4-SNAPSHOT</version>
                        <configuration>
                            <exportLineCoverage>true</exportLineCoverage>
                            <outputFormats>
                                <value>XML</value>
                                <value>HTML</value>
                            </outputFormats>
                            <timestampedReports>false</timestampedReports>
                            <targetClasses>
                                <targetClass>org.maxgabut.JavaClass</targetClass>
                                <targetClass></targetClass>
                            </targetClasses>
                            <targetTests>
                                <targetTest>org.maxgabut.JavaClassTest</targetTest>
                                <targetTest></targetTest>
                            </targetTests>
                        </configuration>
                        <executions>
                            <execution>
                                <id>run-mutation-tests</id>
                                <goals>
                                    <goal>mutationCoverage</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
				
				<profile>
            <id>export</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.pitest</groupId>
                        <artifactId>pitest-maven</artifactId>
                        <version>1.4.4-SNAPSHOT</version>
                        <configuration>
                            <exportLineCoverage>true</exportLineCoverage>
                            <outputFormats>
                                <value>XML</value>
                                <value>HTML</value>
                            </outputFormats>
														<timestampedReports>false</timestampedReports>
														<features>
														    <feature>+EXPORT</feature>
												    </features>
                        </configuration>
                        <executions>
                            <execution>
                                <id>run-mutation-tests</id>
                                <goals>
                                    <goal>mutationCoverage</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>exclusion-no-sub-tags</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.pitest</groupId>
                        <artifactId>pitest-maven</artifactId>
                        <version>1.4.4-SNAPSHOT</version>
                        <configuration>
                            <exportLineCoverage>true</exportLineCoverage>
                            <outputFormats>
                                <value>XML</value>
                                <value>HTML</value>
                            </outputFormats>
                            <timestampedReports>false</timestampedReports>
                            <excludedClasses>org.maxgabut.OtherJavaClass</excludedClasses>
                        </configuration>
                        <executions>
                            <execution>
                                <id>run-mutation-tests</id>
                                <goals>
                                    <goal>mutationCoverage</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>exclusion-with-sub-tags</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.pitest</groupId>
                        <artifactId>pitest-maven</artifactId>
                        <version>1.4.4-SNAPSHOT</version>
                        <configuration>
                            <exportLineCoverage>true</exportLineCoverage>
                            <outputFormats>
                                <value>XML</value>
                                <value>HTML</value>
                            </outputFormats>
                            <timestampedReports>false</timestampedReports>
                            <excludedClasses>
                                <excludedClass>org.maxgabut.OtherJavaClass</excludedClass>
                            </excludedClasses>
                        </configuration>
                        <executions>
                            <execution>
                                <id>run-mutation-tests</id>
                                <goals>
                                    <goal>mutationCoverage</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
